<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:ignore="HardcodedText,ContentDescription">

    <TextView
        android:id="@+id/textView1"
        style="@style/viewHeading"
        android:text="What We Offer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        style="@style/viewSeparatorLeft"
        app:layout_constraintBottom_toBottomOf="@+id/textView1"
        app:layout_constraintEnd_toStartOf="@+id/textView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView1" />

    <View
        style="@style/viewSeparatorRight"
        app:layout_constraintBottom_toBottomOf="@+id/textView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView1"
        app:layout_constraintTop_toTopOf="@+id/textView1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="We offer a wide range of services to\nyour preferences..."
        android:textAlignment="center"
        android:textColor="#174359"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/servicesContainer1"
        style="@style/serviceCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                style="@style/serviceCardImage"
                android:src="@drawable/event_img" />

            <TextView
                style="@style/serviceCardTitle"
                android:text="EVENTS" />

            <View style="@style/serviceCardSeparator" />

            <TextView
                style="@style/serviceCardText"
                android:text="Wedding Photography" />

            <TextView
                style="@style/serviceCardText"
                android:text="Pre-Wedding Photography" />

            <TextView
                style="@style/serviceCardText"
                android:text="Birthday Photography" />

            <TextView
                style="@style/serviceCardText"
                android:text="Corporate Photography" />

            <TextView
                style="@style/serviceCardText"
                android:text="Portfolio Shoot" />

            <TextView
                style="@style/serviceCardText"
                android:text="Product Photography" />

            <com.google.android.material.button.MaterialButton
                style="@style/serviceCardBtn"
                android:text="Know More" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/servicesContainer2"
        style="@style/serviceCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/servicesContainer1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                style="@style/serviceCardImage"
                android:src="@drawable/photography" />

            <TextView
                style="@style/serviceCardTitle"
                android:text="24*7 PHOTOGRAPHY" />

            <View style="@style/serviceCardSeparator" />

            <TextView
                style="@style/serviceCardText"
                android:text="Full Day Shoot" />

            <TextView
                style="@style/serviceCardText"
                android:text="Half Day Shoot" />

            <TextView
                style="@style/serviceCardText"
                android:text="Fashion Shoot" />

            <TextView
                style="@style/serviceCardText"
                android:text="Model Shoot" />

            <TextView
                style="@style/serviceCardText"
                android:text="Drone Shoot" />

            <TextView
                style="@style/serviceCardText"
                android:text="Travel Shoot" />

            <com.google.android.material.button.MaterialButton
                style="@style/serviceCardBtn"
                android:text="Know More" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/servicesContainer3"
        style="@style/serviceCardView"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/servicesContainer2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                style="@style/serviceCardImage"
                android:src="@drawable/graphics" />

            <TextView
                style="@style/serviceCardTitle"
                android:text="GRAPHICS DESIGNING" />

            <View style="@style/serviceCardSeparator" />

            <TextView
                style="@style/serviceCardText"
                android:text="Poster Designing" />

            <TextView
                style="@style/serviceCardText"
                android:text="Logo Designing" />

            <TextView
                style="@style/serviceCardText"
                android:text="Motion Graphics" />

            <TextView
                style="@style/serviceCardText"
                android:text="UI/UX Design" />

            <TextView
                style="@style/serviceCardText"
                android:text="Business Card" />

            <TextView
                style="@style/serviceCardText"
                android:text="Illustrator Design" />

            <com.google.android.material.button.MaterialButton
                style="@style/serviceCardBtn"
                android:text="Know More" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>